# op-node configuration

# Network
OP_NODE_NETWORK=base-mainnet

# L1 Configuration
OP_NODE_L1_ETH_RPC=https://eth-mainnet.example.com
OP_NODE_L1_BEACON=https://eth-beacon.example.com

# L2 Engine
OP_NODE_L2_ENGINE_AUTH=/var/lib/base/jwt.hex
OP_NODE_L2_ENGINE_RPC=http://localhost:8551

# RPC
OP_NODE_RPC_ADDR=0.0.0.0
OP_NODE_RPC_PORT=9545

# P2P
OP_NODE_P2P_LISTEN_IP=0.0.0.0
OP_NODE_P2P_LISTEN_TCP_PORT=9222
OP_NODE_P2P_LISTEN_UDP_PORT=9222

# Metrics
OP_NODE_METRICS_ENABLED=true
OP_NODE_METRICS_ADDR=0.0.0.0
OP_NODE_METRICS_PORT=7300

# Sync Mode
OP_NODE_SYNCMODE=execution-layer

# Sequencer (read-only for non-sequencer nodes)
OP_NODE_SEQUENCER_ENABLED=false
OP_NODE_SEQUENCER_L1_CONFS=4

# Logging
OP_NODE_LOG_LEVEL=info
OP_NODE_LOG_FORMAT=text

# Rollup Config
OP_NODE_ROLLUP_CONFIG=/etc/base/rollup.json
